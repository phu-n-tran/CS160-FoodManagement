<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground_no_icon"
    tools:context=".RegisterActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="290dp"
        android:layout_height="330dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="65dp"
        app:cardBackgroundColor="@color/o_black_overlay"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/addItemDashboard"
        android:layout_width="280dp"
        android:layout_height="320dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="70dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >


            <EditText
                android:id="@+id/editTextRegFirstName"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:layout_marginLeft="60dp"
                />

            <EditText
                android:id="@+id/editTextRegLastName"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:layout_below="@+id/editTextRegFirstName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                />

            <EditText
                android:id="@+id/editTextRegUsername"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:hint=" Email (username)"
                android:inputType="textPersonName"
                android:layout_below="@+id/editTextRegLastName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                 />

            <EditText
                android:id="@+id/editTextRegPassword"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_below="@+id/editTextRegUsername"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp" />

            <Button
                android:id="@+id/btnRegRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextRegPassword"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:enabled="false"
                android:text="Register" />

            <TextView
                android:id="@+id/textViewExistAccountRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnRegRegister"
                android:layout_marginTop="10dp"
                android:text="Already Have An Account?"
                android:textColor="@color/darkBlue"
                android:textStyle="bold"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/info_icon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/info_icon"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/profile_oval_icon"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/lock_icon"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/my_app_icon" />


</RelativeLayout>